<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:minHeight="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="#0e2d91"
                android:layout_height="match_parent">

            </LinearLayout>
            <LinearLayout
                android:layout_weight="35"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                    <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="top"
                    android:src="@drawable/iwm"
                    android:id="@+id/logo"
                    android:padding="9dp"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/txtOrgName"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="INSTITUTE OF WATER MODELLING"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="0dp"
                    android:textColor="#0e2d91"
                    android:textSize="11dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="top"
                    android:src="@drawable/qr"
                    android:id="@+id/qrcode"
                    android:padding="9dp"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="63"
                android:layout_width="0dp"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/empName"
                    android:layout_width="match_parent"
                    android:text="Md. Omar Shohid Khan"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#0e2d91"
                    android:textSize="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/edu"
                    android:layout_width="match_parent"
                    android:text="B.Sc in Computer Science and Engineering"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#BC434343"
                    android:textSize="9dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/designation"
                    android:layout_width="match_parent"
                    android:text="Senior Software Engineer"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#EE434343"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/division"
                    android:layout_width="match_parent"
                    android:text="ICT-GIS Division"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#F3434343"
                    android:textSize="10dp"
                    android:paddingBottom="8dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:text="Phone    :   Off: +880-2-55087611-4 Ext: 353"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#E6434343"
                    android:textSize="9dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:text="Mobile   :  +88 01738-158144"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#E6434343"
                    android:textSize="9dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:text="Email     :   osk@iwmbd.org"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#E6434343"
                    android:textSize="9dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:text="Website :   www.iwmbd.org"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#E6434343"
                    android:textSize="9dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:text="IWM BHABAN, House 06, Road 3C,Block H,\nSector 15, Uttara, Dhaka 1230, Bangladesh"
                    android:fontFamily="serif"
                    android:layout_marginTop="0dp"
                    android:textColor="#E6434343"
                    android:textSize="9dp"
                    android:layout_height="wrap_content"></TextView>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>